<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TeacherMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
         
    xmlns:local="clr-namespace:TeacherMAUI"

    Shell.FlyoutBehavior="Disabled"
    Title="TeacherMAUI">
    <FlyoutItem>  <!--tabbed view items in this-->
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"  />
        <!--Main Page Content Tab -->
            <ShellContent
        Title="Add Chaperone"
        ContentTemplate="{DataTemplate local:AdditionEfhmeriaPage}"
        Route="AdditionEfhmeriaPage"  />
        <!-- Addition Page Content Tab -->
        <ShellContent
        Title="Add Lesson"
        ContentTemplate="{DataTemplate local:AdditionExeiPage}"
        Route="AdditionExeiPage"  />
        <!-- Addition Page Content Tab -->
    </FlyoutItem>
</Shell>
